html
  body
    div 
      span#query(style="display:none") #{query}
    
    div.navbar
      div.navbar-inner 
        div.container-fluid
          div.top-nav.nav-collapse
            ul.nav
              li 
                a(href="../settings/#{uname}") #{uname}
              li
                a(href="../workspace/#{uname}") Workspace
              li
                a(href="../doi/#{uname}") DOI
              li
                a(href="#")#search_button Search
                //a(href="../search/#{uname}")#search_button Search
              li
                form.navbar-search.pull-left
                  input(placeholder="Search this workspace",name="query",type="text").search-query.span2#search_terms

          div.btn-group.pull-right
            ul.nav
              a.btn.dropdown-toggle(data-toggle="dropdown",href="#")
                i.icon-user
                span.hidden-phone #{uname}
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") Profile
                li.divider
                li
                  a(href="login.html") Logout
                li.divider
                li
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 1qk
                li(role="presentation")
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") jamroz
                li(role="presentation")
                  a#8xo.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 8xo
                li(role="presentation")

    div.container-fluid
      div.row-fluid
        div.span12
          div
            ul.breadcrumb
              li
                a(href="#")
                  span#user_id_label #{uname}
                span.divider /
              li
                a(href="#") Search
      div.row-fluid
        div.span12#user_info_space
          // This seems like as good a place as any to store the remainder of the user data in the document object.
          p#curUserNid(style='display:none') #{nid}
          p#curUserEmail(style='display:none') #{email}
          p#curUserName(style='display:none') #{name}
          p#curUserNumber(style='display:none') #{uid}
          p#curUserUname(style='display:none') #{uname}
      div.row-fluid
        div.span12#user_info_space
      div.row-fluid
        div.span12
          div
            p.user_info
      div.row-fluid
        //left bar
        div.span2.main-menu-span 
          div.well.nav-collapse.sidebar-nav
            ul.nav.nav-tabs.nav-stacked.main-menu
              li.nav-header.hidden-tablet Search
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Place holder 1
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Place holder 2
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Place holder 3

        //main content
        div.span8     
          div.row-fluid.sortable
            div.span12
              div.box.span12
                div.box-header.well
                  h2 Basic Search
                    //i.icon-user
                  div.box-icon
                    a.btn.btn-minimize.btn-round(href="#")
                      i.icon-chevron-up
                    a.btn.btn-close.btn-round(href="#")
                      i.icon-remove

                div.box-content
                  div.row-fluid
                    div.span12
                        form
                                //fieldset
                                //div.control-group
                            label.control-label Text:
                                //div.controls
                            input.input-xlarge.focused#search_text(type="text",value="")
                    div.span12
                      div.span10
                      div.span2
                        div.control-group
                            div.controls   
                            button#basic_srch_btn.btn.btn-large Search

          div.row-fluid.sortable
            div.span12
              div.box.span12
                div.box-header.well
                  h2 Advanced Search
                  div.box-icon
                    a.btn.btn-minimize.btn-round(href="#")
                      i.icon-chevron-up
                    a.btn.btn-close.btn-round(href="#")
                      i.icon-remove
                div.box-content
                  div.row-fluid
                    div.span12
                      div.span6
                        form
                          fieldset
                            div.control-group
                              label.control-label Name:
                              div.controls
                                input.input-xlarge.focused#search_name(type="text",value="")
                            div.control-group
                              label.control-label Title:
                              div.controls
                                input.input-xlarge.focused#search_title(type="text",value="")
                            div.control-group
                              label.control-label Description:
                              div.controls
                                input.input-xlarge.focused#search_desc(type="text",value="")
                            div.control-group
                              label.control-label Keywords:
                              div.controls
                                input.input-xlarge.focused#search_keyw(type="text",value="")
                      div.span6
                        div.row-fluid
                          div.span12
                            fieldset
                                div.control-group
                                    label.control-label Resource Types:
                                div.control-group
                                    input.type_checkbox#users(type="checkbox",value="user",checked)
                                    labels Users
                                div.control-group
                                    input.type_checkbox#groups(type="checkbox",value="group",checked) 
                                    labels Groups
                                div.control-group
                                    input.type_checkbox#jobs(type="checkbox",value="job",checked) 
                                    labels Jobs
                                div.control-group
                                    input.type_checkbox#apps(type="checkbox",value="app",checked) 
                                    labels Applications
                                div.control-group
                                    input.type_checkbox#files(type="checkbox",value="file",checked) 
                                    labels Files
                                div.control-group
                                    input.type_checkbox#dirs(type="checkbox",value="dir",checked) 
                                    labels Directories
                                div.control-group
                                    input.type_checkbox#tags(type="checkbox",value="tag",checked) 
                                    labels Tags
                                div.control-group
                                    input.type_checkbox#events(type="checkbox",value="event",checked) 
                                    labels Events
                                div.control-group
                                    input.type_checkbox#dois(type="checkbox",value="doi",checked) 
                                    labels DOI
                    div.span12
                      div.span10
                      div.span2
                        div.control-group
                            div.controls   
                            button#adv_srch_btn.btn.btn-large Search

          div.row-fluid.sortable
            div.span12
              div.box.span12
                div.box-header.well
                  h2 Search results
                    //i.icon-user
                  div.box-icon
                    a.btn.btn-minimize.btn-round(href="#")
                      i.icon-chevron-up
                    a.btn.btn-close.btn-round(href="#")
                      i.icon-remove
                    //div.box-content#results
                div.box-content
                    div#results
                    div#results_tree(style="height:300px")
                    //div.row-fluid
                        div.span12
                        fieldset Live search results



