html
  body
    // (style="display:none")
    div#uname(style="display:none") #{uname}
    div#creator_nid(style="display:none") Creator NID: #{creator_nid}
    div#creator_number(style="display:none") Creator UID: #{creator_number}
    div#creator_uname(style="display:none") Creator Username: #{creator_uname}
    div#creator_name(style="display:none") Creator Name: #{creator_name}
    div#creator_email(style="display:none") Creator Email: #{creator_email}
    div#spec_resources(style="display:none") Resources: #{resource}
    
    div Resource: #{resource.length} 
    
    - if (typeof(resource) !== 'undefined') {
      div Hello!
    - }
    
    - if (typeof(resource) !== 'undefined') {
      - each r in resource
        div Resource: #{r} 
    - }
    
    - if (typeof(fileNids) !== 'undefined') {
      - each f in fileNids
        div File Nid: #{f} 
    - }
    
    - if (typeof(job) !== 'undefined'){ 
      - each j in job
        if j != 'job1'
          div(style="display:none") Job: #{j}   
    - }  
    
    - if (typeof(group) !== 'undefined'){ 
      - each g in group
        if g != 'group1'
          div(style="display:none") Group: #{g}
    - }
    - if (typeof(user) !== 'undefined'){ 
      - each u in user
        if u != 'user1'
          div(style="display:none") User: #{u} 
    - }
          
    div.navbar
      div.navbar-inner 
        div.container-fluid
          div.top-nav.nav-collapse
            ul.nav
              li 
                a(href="../settings/#{uname}") #{uname}
              li
                a(href="../workspace/#{uname}") Workspace
              li
                form.navbar-search.pull-left
                  input(placeholder="Search this workspace",name="query",type="text").search-query.span2
              
          div.btn-group.pull-right
            ul.nav
              a.btn.dropdown-toggle(data-toggle="dropdown",href="#")
                i.icon-user
                span.hidden-phone #{uname}
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") Profile
                li.divider
                li
                  a(href="login.html") Logout
                li.divider
                li
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 1qk
                li(role="presentation")
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") jamroz
                li(role="presentation")
                  a#8xo.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 8xo
                li(role="presentation")
                  
        
    div.container-fluid
    
      div.row-fluid
        div.span12
          div
            ul.breadcrumb
              li
                a(href="#")
                  span#user_id_label #{uname}
                span.divider /
              li
                a(href="#") DOI
      div.row-fluid
        div.span12#user_info_space
     
      div.row-fluid
        div.span12
          div
            p.user_info
      
      div.row-fluid
      
        //left bar
        div.span2.main-menu-span 
          div.well.nav-collapse.sidebar-nav
            ul.nav.nav-tabs.nav-stacked.main-menu
              li.nav-header.hidden-tablet Main
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Manage DOIs
              // li.nav-header.hidden-tablet DOIs
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Add DOI
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Update DOI
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Search DOIs
        
        
        //main content
        div.span8     
      
          div.row-fluid.sortable
            div.span12
              div.box.span12
                div.box-header.well
                  h2 New DOI Form
                  div.box-icon
                    a.btn.btn-minimize.btn-round(href="#")
                      i.icon-chevron-up
                    a.btn.btn-close.btn-round(href="#")
                      i.icon-remove
             
                div.box-content
                  div.row-fluid
                    div.span12 
                      fieldset
                        legend DOI Submission Form
       
                  // GENERAL
                  div.row-fluid(style="margin-bottom:20px") 
                    div.span12
                      h3 General
                  div.row-fluid
                    div.span4 DOI Title
                    div.span6 
                      input#text(name="input_title")
                  div.row-fluid(style="margin-bottom:20px")
                    div.span4 Description
                    div.span6 
                      input#text(name="input_description")
                      
                  // CREATOR INFORMATION
                  div.row-fluid(style="margin-bottom:20px") 
                    div.span12
                      h3 Creator Information
                  div.row-fluid
                    div.span4 Creator
                    div.span6 
                      input#text(name="input_creator_name", value="#{creator_name}")
                  div.row-fluid
                    div.span4 Creator Email
                    div.span6
                      input#text(name="input_creator_email", value="#{creator_email}")
                  
                  div.row-fluid#add_creator_row
                    div.span6 
                      //button#add_creator_button Add Creator
                      
                      
                  // ASSETS
                  div.row-fluid(style="margin-bottom:20px,margin-top:20px;")
                    div.span12  
                      h3 Assets
                      br
                  div.row-fluid
                    div.span4 Files
                    div.span6 
                      input#text(name="input_files",value="#{resource}")
                      input(name="fileNids", type="hidden", value="#{fileNids}")
                      
                  br
                  
                  // KEYWORDS
                  div.row-fluid(style="margin-bottom:20px")
                    div.span12
                      h3 Keywords
                   
                  div.row-fluid
                    div.span4 Keywords (comma-separated list)
                    div.span6 
                      input#text(name="input_keywords",value="")
                      
                  br
                  
                  // MISCELLANEOUS
                  div.row-fluid(style="margin-bottom:20px")
                    div.span12
                      h3 Miscellaneous
                      
                  div.row-fluid
                    div.span4 Resources
                    div.span6 
                      input#text(name="input_resources")
                    div.span2
                  
                  div.row-fluid
                    div.span4 Language
                    div.span6 
                      input#text(name="input_language", value="English")
                  
                  div.row-fluid
                    div.span4 Country
                    div.span6 
                      input#text(name="input_country", value="USA")
                  
                  div.row-fluid
                    div.span4 Sponsor Organization
                    div.span6 
                      input#text(name="input_sponsor_org", value="Oak Ridge National Laboratory")
                  
                  div.row-fluid
                    div.span4 Jobs and Applications
                    div.span6 
                      textarea #{job} 
                        | #{app}
                  div.row-fluid
                    div.span4 People and Groups
                    div.span6 
                      textarea #{group} 
                        | #{user}
                  
                  hr
                  
                  div.row-fluid
                    div.span6 
                      button#submit_doi_request Submit DOI Request
                      button#return Return to Workspace
                  

