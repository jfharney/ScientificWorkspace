html
  body
    // (style="display:none")
    div(style="display:none") Creator NID: #{creator_nid}
    div(style="display:none") Creator UID: #{creator_number}
    div(style="display:none") Creator Username: #{creator_uname}
    div(style="display:none") Creator Name: #{creator_name}
    div(style="display:none") Creator Email: #{creator_email}
    
    //div Resource: #{resource.length} 
    - if (typeof(resource) !== 'undefined') {
      - each r in resource
        div Resource: #{r} 
    - }
    
    - if (typeof(job) !== 'undefined'){ 
      - each j in job
        if j != 'job1'
          div Job: #{j}   
    - }  
    
    - if (typeof(group) !== 'undefined'){ 
      - each g in group
        if g != 'group1'
          div Group: #{g}
    - }
    - if (typeof(user) !== 'undefined'){ 
      - each u in user
        if u != 'user1'
          div User: #{u} 
    - }
          
    div.navbar
      div.navbar-inner 
        div.container-fluid
          div.top-nav.nav-collapse
            ul.nav
              li 
                a(href="../settings/#{creator_uid}") #{creator_uname}
              li
                a(href="../workspace/#{creator_uname}") Workspace
              //li
                //a(href="../doi/#{creator_uid}") DOI
              li
                form.navbar-search.pull-left
                  input(placeholder="Search this workspace",name="query",type="text").search-query.span2
              
          div.btn-group.pull-right
            ul.nav
              a.btn.dropdown-toggle(data-toggle="dropdown",href="#")
                i.icon-user
                span.hidden-phone #{uname}
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") Profile
                li.divider
                li
                  a(href="login.html") Logout
                li.divider
                li
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 1qk
                li(role="presentation")
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") jamroz
                li(role="presentation")
                  a#8xo.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 8xo
                li(role="presentation")
                  
        
    div.container-fluid
    
      div.row-fluid
        div.span12
          div
            ul.breadcrumb
              li
                a(href="#")
                  span#user_id_label #{creator_uname}
                span.divider /
              li
                a(href="#") DOI
      div.row-fluid
        div.span12#user_info_space
     
      div.row-fluid
        div.span12
          div
            p.user_info
      
      div.row-fluid
      
        //left bar
        div.span2.main-menu-span 
          div.well.nav-collapse.sidebar-nav
            ul.nav.nav-tabs.nav-stacked.main-menu
              li.nav-header.hidden-tablet Main
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Manage DOIs
              // li.nav-header.hidden-tablet DOIs
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Add DOI
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Update DOI
              li
                a.ajax-link(href="#")
                  span.hidden-tablet Search DOIs
          //  button#add_tag_button.btn.btn-primary.btn-lg(data-toggle="modal",data-target="#myModal",style="margin-bottom:50px") Add Tag
          // <i class="icon-home"></i><span class="hidden-tablet"> Dashboard</span>
        
        
        
        //main content
        div.span8     
      
          div.row-fluid.sortable
            div.span12
              div.box.span12
                div.box-header.well
                  h2 New DOI Form
                  div.box-icon
                    a.btn.btn-minimize.btn-round(href="#")
                      i.icon-chevron-up
                    a.btn.btn-close.btn-round(href="#")
                      i.icon-remove
             
                div.box-content
                  div.row-fluid
                    div.span12 
                      fieldset
                        legend DOI Submittal Form
                  
                                    
                  div.row-fluid(style="margin-bottom:20px") 
                    div.span12
                      h3 Title
                  div.row-fluid
                    div.span4 DOI Title
                    div.span6 
                      input#text(name="doi_title")
                  div.row-fluid(style="margin-bottom:20px")
                    div.span4 Other Field
                    div.span6 
                      input#text(name="other_field")
                      
                  div.row-fluid(style="margin-bottom:20px") 
                    div.span12
                      h3 Creator Information
                  div.row-fluid
                    div.span4 Creator
                    div.span6 
                      input#text(name="creator_input",value="#{creator_name}")
                  div.row-fluid
                    div.span4 Creator Email
                    div.span6 
                      input#text(name="creator_input",value="#{creator_email}")
                      
                  
                  div.row-fluid#add_creator_row
                    div.span6 
                      //button#add_creator_button Add Creator
                  
                  hr    
                      
                  div.row-fluid(style="margin-bottom:20px,margin-top:20px;")
                    div.span12  
                      h3 Resources
                      
                      
                  - if (typeof(resource) !== 'undefined') {
                  - for (var i = 0; i < resource.length; i++)
                      //div= arr[i]
                      div.row-fluid
                        div.span4 Resource List
                        div.span6 
                          input#text(name="resource_input",value="#{resource[i]}")
                        div.span2
                          a.metadata(href="#") metadata
                    //- each r in resource
                      div.row-fluid
                        div.span4 Resource
                        div.span6 
                          input#text(name="resource_input",value="#{r}")
                        div.span2
                          a.metadata(href="#") metadata
                  -}
                  - else
                    div.row-fluid
                        div.span4 Resource
                        div.span6 
                          input#text(name="resource_input", value="")
                        div.span2
                          a.metadata(href="#") metadata
                  
                  div.row-fluid#add_resouce_row
                    div.span6 
                      //button#add_resource_button Add Resource
                  
                  
                  hr
                  
                  div.row-fluid(style="margin-bottom:20px")
                    div.span12
                      h3 Keywords
                   
                  div.row-fluid
                    div.span4 Keyword
                    div.span6 
                      input#text(name="keyword_input",value="")
                  
                  div.row-fluid#add_keyword_row
                    div.span6 
                      button#add_keyword_button Add Keyword
                  
                    
                  hr
                  
                  div.row-fluid(style="margin-bottom:20px")
                    div.span12
                      h3 Miscellaneous
                  
                  div.row-fluid
                    div.span4 Language
                    div.span6 
                      input#text(name="language",value="English")
                  
                  div.row-fluid
                    div.span4 Country
                    div.span6 
                      input#text(name="country",value="USA")
                  
                  div.row-fluid
                    div.span4 Sponsor Organization
                    div.span6 
                      input#text(name="sponsor_org",value="Oak Ridge National Laboratory")
                  
                  div.row-fluid
                    div.span4 Jobs and Applications
                    div.span6 
                      textarea #{job}
                  div.row-fluid
                    div.span4 People and Groups
                    div.span6 
                      textarea #{group}
                    
                  hr
                  
                  div.row-fluid
                    div.span6 
                      button#submit_doi_request Submit DOI Request
                      button#cancel Cancel
                      button#return Return to Workspace
                  
                  
                  
                  
                  //
                    div.row-fluid
                      div.span6 resource
                      div.span6 
                        input#text(name="resource_input")
                    div.row-fluid
                      div.span6 creator email
                      div.span6 
                        input#text(name="creator_email_input")
                    div.row-fluid
                      div.span6 related resource
                      div.span6 
                        input#text(name="related_resource_input")
                    div.row-fluid
                      div.span6 product nos
                      div.span6 
                        input#text(name="product_nos_input")
                    div.row-fluid
                      div.span6 contract nos
                      div.span6 
                        input#text(name="contract_nos_input")
                    div.row-fluid
                      div.span6 other identifying numbers
                      div.span6 
                        input#text(name="other_identifying_numbers_input")
                    div.row-fluid
                      div.span6 availability
                      div.span6 
                        input#text(name="availability_input")
             
                  
                  
                  //class DOIData(models.Model):
                       dataset_type = models.CharField(max_length=50, default="RecordType")
                       title = models.CharField(max_length=200)
                       creators = models.CharField(max_length=1024)
                       creators_email = models.CharField(max_length=1024)
                       related_resources = models.CharField(max_length=1024, default="", blank=True)
                       product_nos = models.CharField(max_length=200, default="", blank=True)
                       contract_nos = models.CharField(max_length=200, default="", blank=True)
                       other_identifying_numbers = models.CharField(max_length=200, default="", blank=True)
                       availability = models.CharField(max_length=2, default="", blank=True)
                       contributor_organizations = models.CharField(max_length=200, default="", blank=True)
                       publication_date = models.DateField()
                       language = models.CharField(max_length=20, default="", blank=True)
                       country = models.CharField(max_length=20, default="", blank=True)
                       sponsor_org = models.CharField(max_length=200, default="", blank=True)
                       keywords = models.CharField(max_length=400, default="", blank=True)
                       description = models.TextField()
                       site_url = models.URLField(default="http://olcf.ornl.gov/")
                       doi = models.URLField(default="", blank=True)
                       file_extension = models.TextField(max_length=10, default="", blank=True)
                
                
      
            
