  body
      
    div.navbar
      div.navbar-inner 
        div.container-fluid
          div.top-nav.nav-collapse
            ul.nav
              li 
                a(href="../settings/#{uid}") #{uid}
              li
                a(href="../workspace/#{uid}") Workspace
              li
                a(href="../doi/#{uid}") DOI
              li
                form.navbar-search.pull-left
                  input(placeholder="Search this workspace",name="query",type="text").search-query.span2
              
          div.btn-group.pull-right
            ul.nav
              a.btn.dropdown-toggle(data-toggle="dropdown",href="#")
                i.icon-user
                span.hidden-phone #{uid}
                span.caret
              ul.dropdown-menu
                li
                  a(href="#") Profile
                li.divider
                li
                  a(href="login.html") Logout
                li.divider
                li
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 1qk
                li(role="presentation")
                  a#j1s.user_dropdown_list(role="menuitem",tabindex="-1",href="#") jamroz
                li(role="presentation")
                  a#8xo.user_dropdown_list(role="menuitem",tabindex="-1",href="#") 8xo
                li(role="presentation")
        
    div.container-fluid
    
      div.row-fluid
        div.span12
          div
            ul.breadcrumb
              li
                a(href="#")
                  span#user_id_label #{uid}
                span.divider /
              li
                a(href="#") Workspace
      div.row-fluid
        div.span12#user_info_space
                
      div.row-fluid
        div.span12
          div
            p.user_info
            
      div.row-fluid.sortable
      
        // LEFT MENU PANEL
        div.span2.main-menu-span
          div.well.nav-collapse.sidebar-nav
            ul.nav.nav-tabs.nav-stacked.main-menu
              li.nav-header.hidden-tablet Settings
              li
                a#panelVisibilityButton.ajax-link(href="#")
                  span.hidden-tablet Viewing Options
              li
                a#panelArrangementButton.ajax-link(href="#")
                  span.hidden-tablet My Account
              li
                a#panelArrangementButton.ajax-link(href="#")
                  span.hidden-tablet Edge Reviews
                  
        // MAIN PANEL
        div.span6
          div.row-fluid.sortable
            h3 Visibility
            ul
              li.settings-panels
                input#collabVisibilityCheckbox(type="checkbox") 
                span(style="margin-left: 8px") Collaborators Panel
              li.settings-panels
                input#projectSpaceVisibilityCheckbox(type="checkbox") 
                span(style="margin-left: 8px") Project Space Panel
              li.settings-panels 
                input#jobsVisibilityCheckbox(type="checkbox") 
                span(style="margin-left: 8px") Jobs Panel
              li.settings-panels 
                input#tagcloudVisibilityCheckbox(type="checkbox") 
                span(style="margin-left: 8px") Tag Cloud
            br
          div.row-fluid.sortable
            h3 Panel Ordering
            br
          div.row-fluid.sortable
            h3 Search Only Option
            ul
              li.settings-panels
                input#searchOnlyCheckbox(type="checkbox") 
                span(style="margin-left: 8px") Present me with only a search field when the application loads.
          br
          div
            button#saveViewingOptionsButton Save Changes
            button#clearVisCookies Clear Settings
            
